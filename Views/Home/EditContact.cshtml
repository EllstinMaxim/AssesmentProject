@model AssesmentProject.Models.Contact

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<hr />

@{
    if (ViewData["Response"] != null)
    {
        <div id="dvAlert" class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
    }
}
@using (Html.BeginForm("UpdateContact", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @{
            if (Convert.ToBoolean(ViewData["ShowSummary"]))
            {
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", id = "dvValid" })
            }
        }

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(a => a.ContactID)
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

